#!/usr/bin/make -f

export DH_VERBOSE=1
export DH_OPTIONS=-v

# Top directory of the source code.
SRCTOP    := $(shell if [ "$$PWD" != "" ]; then echo $$PWD; else pwd; fi)
# Destination directory where files will be installed.
DESTDIR   = $(SRCTOP)/debian

# Definition of directories
BIN_DIR = $(DESTDIR)/usr/bin
SHARE_DIR = $(DESTDIR)/usr/share/$(package)
DOCS_DIR = $(DESTDIR)/usr/share/doc/$(package)
MAN_DIR = $(DESTDIR)/usr/share/man/man3

ifneq (,$(wildcard /usr/share/dpkg/default.mk))
  include /usr/share/dpkg/default.mk
else
  DEB_HOST_ARCH_OS ?= $(shell dpkg-architecture -qDEB_HOST_ARCH_OS)
  DEB_HOST_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
  DEB_BUILD_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
  DEB_HOST_ARCH_CPU ?= $(shell dpkg-architecture -qDEB_HOST_ARCH_CPU)
  DEB_VENDOR := $(shell dpkg-vendor --query vendor)

  CFLAGS := -Wall -g
  ifneq (,$(filter noopt,$(DEB_BUILD_OPTIONS)))
    CFLAGS += -O0
  else
    CFLAGS += -O2
  endif

  DEB_VERSION_UPSTREAM := $(shell dpkg-parsechangelog | sed -n '/^Version:/{s/Version: *\([^:]*:\)\?\([^-]*\)-.*/\2/;p;q}')
endif

PKGS=rta
PKGS+=rta-dev
PKGS+=rta-doc
PKGS+=rta-dbg
PKGS+=rta-examples

# There is no runnable test.
# So, the DEB_BUILD_OPTIONS 'nocheck' can be ignored.
MAKETEST := no

ifeq ($(DEB_VENDOR),Ubuntu)
  :
else
  :
endif

# nothing to do per default
all:

clean:
	dh_testdir
	rm -f *-stamp*
	for i in src test; do \
	  cd $$i; \
	  make clean; \
	  cd ..; \
	done
	rm -fr debian/rta*
	rm -f debian/files
	rm -f debian/substvars

build: build-stamp
build-stamp: $(foreach v,$(PKGS),build-stamp-$(v))
	dh_testdir
	touch $@

build-stamp-%: PKG=$*
build-stamp-%:
	dh_testdir
	dh_prep -p $(PKG)
	@echo "*** Debian *** building package $(PKG)"
	if [ $(PKG) = rta ]; then            \
	  $(MAKE) -C src;                    \
        elif [ $(PKG) = rta-examples ]; then \
	  $(MAKE) -C test;                   \
	else                                 \
	  :;                                 \
	fi
	touch $@

build-arch: build

build-indep: build

install: install-stamp
install-stamp: $(foreach v,$(PKGS),install-stamp-$(v))
	dh_testdir
	touch $@

install-stamp-rta:
	dh_testdir
	dh_testroot
	@echo "*** Debian *** installing package rta"
	dh_installdirs
	$(MAKE) -C src install DESTDIR=$(DESTDIR)/rta INSTDIR=usr
	rm -fr $(DESTDIR)/rta/usr/include
	rm -fr $(DESTDIR)/rta/usr/lib/*.a
	touch $@

install-stamp-rta-dev:
install-stamp-rta-dbg:
install-stamp-rta-doc:
install-stamp-rta-examples:

